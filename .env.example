# üåê Vibe Coder Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# üîê Security & Authentication
# ============================================================================

# Claude API Configuration
CLAUDE_API_KEY=sk-ant-xxxxx
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4096

# GitHub Integration (for playlist discovery and issues)
GITHUB_TOKEN=ghp_xxxxx
GITHUB_REPOSITORY=username/vibe-coder

# ============================================================================
# üê≥ Docker Configuration
# ============================================================================

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=vibe-coder/host
DOCKER_TAG=latest

# Host Server Configuration
HOST_PORT=8080
HOST_WORKSPACE_DIR=./workspace
HOST_SESSIONS_DIR=./sessions
HOST_LOG_LEVEL=info

# Container Resource Limits
HOST_MEMORY_LIMIT=1g
HOST_CPU_LIMIT=1
HOST_RESTART_POLICY=unless-stopped

# ============================================================================
# üì° Signaling Server Configuration  
# ============================================================================

# Official Signaling Server (Recommended for most users)
SIGNALING_SERVER_URL=https://signal.vibe-coder.space
SIGNALING_SERVER_REGION=auto

# Custom Signaling Server (Enterprise only)
# SIGNALING_SERVER_URL=https://your-custom-signaling.vercel.app
# SIGNALING_API_KEY=your-api-key-here

# WebRTC Configuration
WEBRTC_ICE_SERVERS=["stun:stun.l.google.com:19302"]
WEBRTC_ENFORCE_ENCRYPTION=true
P2P_CONNECTION_TIMEOUT=30000

# ============================================================================
# ‚òÅÔ∏è Vercel Configuration
# ============================================================================

# Vercel Deployment
VERCEL_TOKEN=xxxxxxxxxx
VERCEL_ORG_ID=xxxxx
VERCEL_PROJECT_ID=xxxxx
VERCEL_PWA_PROJECT_ID=xxxxx

# Domain Configuration
PRODUCTION_DOMAIN=vibe-coder.space
WWW_DOMAIN=www.vibe-coder.space
STAGING_DOMAIN=staging.vibe-coder.space

# ============================================================================
# üóÑÔ∏è Database Configuration (Vercel KV)
# ============================================================================

# Production Environment
PRODUCTION_KV_URL=redis://xxxxx
PRODUCTION_KV_REST_API_URL=https://xxxxx.upstash.io
PRODUCTION_KV_REST_API_TOKEN=xxxxx

# Staging Environment
STAGING_KV_URL=redis://xxxxx
STAGING_KV_REST_API_URL=https://xxxxx.upstash.io
STAGING_KV_REST_API_TOKEN=xxxxx

# ============================================================================
# üìä Monitoring & Analytics
# ============================================================================

# Sentry Error Monitoring
PRODUCTION_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
STAGING_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Vercel Analytics
ANALYTICS_ID=xxxxx

# Performance Monitoring
LIGHTHOUSE_CI_TOKEN=xxxxx

# ============================================================================
# üîî Notifications
# ============================================================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx
SLACK_CHANNEL=#vibe-coder
SLACK_USERNAME=Vibe Coder Bot

# Email Notifications
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
STAKEHOLDER_EMAILS=user1@example.com,user2@example.com

# Discord Integration (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx

# ============================================================================
# üåç PWA Configuration
# ============================================================================

# Frontend Environment Variables
VITE_APP_ENV=production
VITE_SIGNALING_URL=https://vibe-coder.space
VITE_API_BASE_URL=https://vibe-coder.space/api
VITE_WS_URL=wss://vibe-coder.space/ws

# PWA Features
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE=true

# ============================================================================
# üß™ Testing Configuration
# ============================================================================

# Test Environment
TEST_BASE_URL=http://localhost:4173
TEST_TIMEOUT=30000
TEST_RETRIES=3

# E2E Testing
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true

# Visual Regression Testing
PERCY_TOKEN=xxxxx

# ============================================================================
# üöÄ Local Development
# ============================================================================

# Local Server Configuration
LOCAL_HOST_PORT=3001
LOCAL_SIGNALING_PORT=3000
LOCAL_PWA_PORT=5173

# Development Features
DEV_ENABLE_HMR=true
DEV_ENABLE_SOURCEMAPS=true
DEV_LOG_LEVEL=debug

# Mock Services
MOCK_CLAUDE_API=false
MOCK_GITHUB_API=false

# ============================================================================
# üîß Advanced Configuration
# ============================================================================

# WebRTC Configuration
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVERS=turn:your-turn-server.com:3478

# Security Headers
SECURITY_CORS_ORIGIN=https://www.vibe-coder.space,https://vibe-coder.space
SECURITY_CSP_NONCE=true
SECURITY_HSTS_MAX_AGE=31536000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Management
SESSION_SECRET=your-very-secure-session-secret
SESSION_MAX_AGE=86400000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.js,.ts,.tsx,.json,.md,.txt

# ============================================================================
# üìù Usage Instructions
# ============================================================================

# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values for each variable
# 3. Never commit .env to version control
# 4. Use specific environment files for different deployments:
#    - .env.local (local development)
#    - .env.staging (staging environment)  
#    - .env.production (production environment)

