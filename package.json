{
  "name": "vibe-coder",
  "version": "0.1.0",
  "private": true,
  "description": "スマホから Claude Code を直感的に操作できるモバイル最適化リモート開発環境",
  "author": "Minoru Tomobe <minoru.tomobe@gmail.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:ux": "playwright test",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:local": "concurrently \"npm run dev\" \"npm run test:ux\"",
    "clean": "turbo run clean",
    "vibe-coder": "docker-compose up -d",
    "vibe-coder:stop": "docker-compose down",
    "vibe-coder:logs": "docker-compose logs -f",
    "vibe-coder:status": "docker-compose ps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md}": ["prettier --write"]
  }
}