{
  "name": "vibe-coder",
  "version": "0.1.0",
  "private": true,
  "description": "スマホから Claude Code を直感的に操作できるモバイル最適化リモート開発環境",
  "author": "Vibe Coder Team",
  "license": "Apache-2.0",
  "scripts": {
    "vibe-coder": "./scripts/vibe-coder.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run packages/**/*.test.ts apps/**/*.test.tsx",
    "test:e2e": "playwright test",
    "test:ux": "node test/lighthouse-ux.js",
    "test:accessibility": "node test/lighthouse-ux.js",
    "test:visual": "playwright test test/visual-regression.spec.ts",
    "test:ux-suite": "node test/ux-test-runner.js",
    "test:local": "./scripts/local-test.sh",
    "feedback": "./scripts/collect-feedback.sh",
    "preview-ux": "node test/preview-ux-test.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "validate:docs": "node scripts/validate-docs.js",
    "validate:all": "npm run lint && npm run typecheck && npm run validate:docs",
    "build": "pnpm -r run build",
    "clean": "rm -rf node_modules dist coverage test-results",
    "docker:build": "./scripts/docker-build.sh",
    "docker:push": "./scripts/docker-push.sh",
    "deploy": "echo 'Use specific deploy commands: deploy:pwa or deploy:signaling'",
    "deploy:pwa": "cd apps/web && vercel --prod",
    "deploy:signaling": "cd packages/signaling && vercel --prod"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "framer-motion": "^11.0.8",
    "helmet": "^7.1.0",
    "lucide-react": "^0.356.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "tsx": "catalog:",
    "eslint": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-security": "catalog:",
    "prettier": "catalog:",
    "vitest": "catalog:",
    "@playwright/test": "catalog:",
    "playwright": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/user-event": "catalog:",
    "jsdom": "catalog:",
    "vite": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "tailwindcss": "catalog:",
    "@tailwindcss/forms": "catalog:",
    "postcss": "catalog:",
    "autoprefixer": "catalog:",
    "lighthouse": "catalog:",
    "axe-core": "catalog:",
    "chrome-launcher": "catalog:",
    "http-server": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/express": "catalog:",
    "@types/cors": "catalog:",
    "@types/ws": "catalog:"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
