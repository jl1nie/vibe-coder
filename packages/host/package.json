{
  "name": "@vibe-coder/host",
  "version": "0.1.0",
  "private": true,
  "description": "Vibe Coder Host Server - Claude Code integration with WebRTC P2P",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "echo 'Host server should be started with Docker. Use: npm run start'",
    "start": "node dist/host/src/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vibe-coder/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^4.0.1",
    "simple-peer": "^9.11.1",
    "speakeasy": "^2.0.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/simple-peer": "^9.11.8",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.54.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0",
    "vitest": "^0.34.6"
  }
}
