{
  "name": "@vibe-coder/host",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Code ホストサーバー",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t vibe-coder-host -f ../../docker/host/Dockerfile ../..",
    "docker:run": "docker run -p 3000:3000 -p 8080:8080 vibe-coder-host"
  },
  "dependencies": {
    "@vibe-coder/shared": "workspace:*",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ws": "^8.16.0",
    "wrtc": "^0.4.7",
    "simple-peer": "^9.11.1",
    "node-pty": "^1.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/uuid": "^9.0.8",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "tsc-alias": "^1.8.8"
  }
}