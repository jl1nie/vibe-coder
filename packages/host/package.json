{
  "name": "@vibe-coder/host",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Code ホストサーバー",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t vibe-coder-host -f ../../docker/host/Dockerfile ../..",
    "docker:run": "docker run -p 3000:3000 -p 8080:8080 vibe-coder-host"
  },
  "dependencies": {
    "@vibe-coder/shared": "workspace:*",
    "express": "catalog:",
    "express-rate-limit": "catalog:",
    "helmet": "catalog:",
    "ws": "catalog:",
    "wrtc": "catalog:",
    "simple-peer": "catalog:",
    "node-pty": "catalog:",
    "uuid": "catalog:",
    "zod": "catalog:",
    "cors": "catalog:",
    "dotenv": "catalog:",
    "compression": "catalog:",
    "winston": "catalog:",
    "pino": "catalog:",
    "pino-pretty": "catalog:",
    "chokidar": "catalog:"
  },
  "devDependencies": {
    "@types/express": "catalog:",
    "@types/ws": "catalog:",
    "@types/uuid": "catalog:",
    "@types/cors": "catalog:",
    "@types/compression": "catalog:",
    "@types/node": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "supertest": "catalog:",
    "@types/supertest": "catalog:",
    "tsc-alias": "catalog:"
  }
}