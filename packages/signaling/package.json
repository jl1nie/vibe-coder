{
  "name": "@vibe-coder/signaling",
  "version": "0.1.0",
  "private": true,
  "description": "Vibe Coder Signaling Server - Next.js API Routes + PWA Static hosting",
  "scripts": {
    "dev": "next dev -p 5174",
    "build": "next build",
    "start": "next start -p 5174",
    "export": "next export",
    "dev:vercel": "vercel dev --listen 5174",
    "deploy": "vercel --prod",
    "clean": "rm -rf .next .vercel dist out",
    "typecheck": "tsc --noEmit",
    "lint": "next lint",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@vercel/node": "^3.0.21",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/cors": "^2.8.0",
    "typescript": "^5.3.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6"
  }
}
