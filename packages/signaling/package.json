{
  "name": "@vibe-coder/signaling",
  "version": "0.1.0",
  "private": true,
  "description": "Vibe Coder Signaling Server - WebRTC signaling via Vercel Edge Functions",
  "scripts": {
    "dev": "echo 'ローカル開発は手動で vercel dev を実行してください。'",
    "start": "echo '本番はVercel上でのみ動作します。ローカル開発は dev を使ってください。'",
    "build": "tsc",
    "deploy": "vercel --prod",
    "clean": "rm -rf .vercel dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint api --ext .ts --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vibe-coder/shared": "workspace:*",
    "@vercel/edge": "^1.1.1",
    "next": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/node": "^3.0.21",
    "typescript": "^5.3.0",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  }
}
