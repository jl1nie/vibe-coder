{
  "name": "@vibe-coder/signaling",
  "version": "0.1.0",
  "private": true,
  "description": "Vibe Coder Signaling Server - WebRTC signaling via Vercel Edge Functions",
  "scripts": {
    "dev": "echo 'Use pnpm dev:vercel to start the development server'",
    "dev:vercel": "vercel dev --listen 5174",
    "start": "echo '本番はVercel上でのみ動作します。ローカル開発は dev を使ってください。'",
    "build": "tsc",
    "deploy": "vercel --prod",
    "clean": "rm -rf .vercel dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint api --ext .ts --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vercel/node": "^3.0.21",
    "express": "^4.18.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "typescript": "^5.3.0",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  }
}
